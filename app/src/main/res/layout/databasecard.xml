<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="7dp"
    android:id="@+id/database_card"
    >

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/hometop"
        android:layout_gravity="center"
        android:padding="10dp">


        <ImageView
            android:id="@+id/web_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/html" />

        <TextView
            android:id="@+id/web_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/web_image"
            android:fontFamily="@font/robotoregular"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:text="HTML"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/web_desp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/web_title"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:fontFamily="@font/alata"
            android:visibility="invisible"
            android:text="Download" />

        <TextView
            android:id="@+id/web_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>