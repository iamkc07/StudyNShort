<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HtmlPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Notes Detail"
                android:textColor="@color/dark_purple"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/alata"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.429"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/detailbox"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/img_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3">


                <ImageView
                    android:id="@+id/detail_img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="49dp"
                    android:layout_marginBottom="50dp"
                    app:srcCompat="@drawable/html" />
            </RelativeLayout>


            <TextView
                android:id="@+id/detail_desp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_box"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/alata"
                android:text="TextView"
                android:paddingLeft="5dp"
                android:textColor="@color/dark_purple"
                android:textSize="20sp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_txt"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/detail_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="416dp"
                android:fontFamily="@font/robotoregular"
                android:text="TextView"
                android:textColor="@color/dark_purple"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/detail_dwd"
                android:layout_width="155dp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bgbtn"
                android:fontFamily="@font/robotocondensed_bold"
                android:text="Download"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/detail_view"
                app:layout_constraintTop_toBottomOf="@+id/detail_desp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/detail_view"
                android:layout_width="155dp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/bgbtn"
                android:fontFamily="@font/robotocondensed_bold"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@+id/detail_dwd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_desp" />

            <TextView
                android:id="@+id/detail_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:ignore="MissingConstraints"
                android:textColor="@color/dark_purple"
                tools:layout_editor_absoluteX="131dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="577dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>